<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Who is the best cricketer in the world?"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/rgRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvName">

        <RadioButton
            android:id="@+id/rbSachin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sachin Tendulkar"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbVirat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virat Kohli"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbGilchirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adam Gilchirst"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbJacquesKallis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jacques Kallis"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RadioGroup>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="Next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgRadioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>